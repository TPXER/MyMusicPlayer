
QWidget {
    background-color: #FAFAFA;
    color: #212121;
    font-family: Roboto, '微软雅黑', sans-serif;
    font-size: 14px;
}
QPushButton {
    background-color: #E0E0E0;
    border: none;
    border-radius: 6px;
    padding: 6px 12px;
}
QPushButton:hover {
    background-color: #BDBDBD;
}
QPushButton:pressed {
    background-color: #9E9E9E;
}
