}
QPushButton:pressed {
    background-color: #d0d0d0;
}
/* 播放进度条：水平滑块 */
QSlider::groove:horizontal {
    height: 6px;              /* 滑槽厚度 */
    background: #DDD;         /* 滑槽底色 */
    border-radius: 3px;       /* 圆角 */
    margin: 0px;
}
QSlider::handle:horizontal {
    width: 14px;              /* 滑块宽度 */
    height: 14px;
    margin: -4px 0;           /* 让滑块略微超出槽上下边缘，居中 */
    background: #4CAF50;      /* 滑块颜色 */
    border-radius: 7px;
    border: none;
}
/* 已经播放部分 */
QSlider::sub-page:horizontal {
    background: #4CAF50;
    border-radius: 3px;
}
/* 未播放部分 */
QSlider::add-page:horizontal {
    background: #BBB;
    border-radius: 3px;
}
QSlider::groove:horizontal:hover {
    background: #CCC;   /* 鼠标悬停时，槽体变亮一些 */
}
QSlider::handle:horizontal:hover {
    background: #66BB6A; /* 鼠标悬停在滑块时，变为更亮的绿色 */
}

}
